{
	"source": {
		"include": [ "lib", "README.md" ]
	},
	"plugins": [ "plugins/markdown" ],
	"markdown": {
		"parser": "gfm"
	},
	"opts": {
		"destination": "./docs/",
		"template": "./node_modules/ink-docstrap/template"
	},
	"templates": {
		"systemName": "<%= pkg.name %>",
		"theme": "cerulean",
		"linenums": true,
		"navType": "vertical",
		"copyright": "Â© 2014 <%= pkg.user %>",
    "default": {
      "outputSourceFiles": true
    }
	}
}
